<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/app_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src="@drawable/task" />

    <TextView
        android:id="@+id/homepage_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Assignments of \n the day"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />


   <!-- <ImageButton
        android:id="@+id/add_assingment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="310dp"
        android:contentDescription="add assignment"
        android:padding="5dp"
        android:src="@mipmap/add" />-->

    <ImageButton
        android:id="@+id/date_button"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="#FF4962E8"
        android:contentDescription="date_button"
        android:padding="5dp"
        android:src="@mipmap/acc_calendar" />

    <Button
        android:id="@+id/show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="150dp"
        android:text="Show all"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/homepage_date"
        android:layout_width="171dp"
        android:layout_height="39dp"
        android:layout_below="@id/icon"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_list"
        android:layout_width="368dp"
        android:layout_height="715dp"
        android:layout_below="@id/homepage_date"
        android:layout_marginTop="20dp"
        android:textSize="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_assingment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/fab_margin"
        app:backgroundTint="#FF4962E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/ic_action_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/fab_margin"
        app:backgroundTint="#FF4962E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/ic_profile_icon" />

</RelativeLayout>